set font "inconsolata regular 12"

set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 10
map r reload
map R rotate
map C recolor
unmap <C-r>
map p print
map <C-a> feedkeys ":exec okular %<Return>"
map D toggle_page_mode

map u scroll half-up
map d scroll half-down
map K zoom in
map J zoom out

map <C-g> toggle_index
map <C-m> toggle_statusbar
set selection-clipboard "clipboard"
set n-completion-items 10 #???
